<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="visualoptions" >

    <TextView
        android:id="@+id/accesspointLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accesspoint Label"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/accesspointLabelSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/showText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:id="@+id/showAccesspointsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accesspoints" />

    <CheckBox
        android:id="@+id/showActivitiesCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activities" />

    <CheckBox
        android:id="@+id/showLabelsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Labels" />

    <CheckBox
        android:id="@+id/showGridpointsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gridpoints" />

</LinearLayout>
