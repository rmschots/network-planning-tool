<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="results" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/renderDataButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onResultsFlipClick"
            android:tag="renderdata"
            android:text="Render Data"
            android:textColor="@color/toggle_text_color" />

        <Button
            android:id="@+id/visualOptionsButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onResultsFlipClick"
            android:tag="visualoptions"
            android:text="Visual Options"
            android:textColor="@color/toggle_text_color" />

        <Button
            android:id="@+id/exportRawDataButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onResultsFlipClick"
            android:tag="export"
            android:text="Export Raw Data"
            android:textColor="@color/toggle_text_color" />

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/resultsFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/results_view_renderdata" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/results_view_visualoptions" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/results_view_exportrawdata" />

    </ViewFlipper>

</LinearLayout>
