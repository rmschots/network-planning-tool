<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="renderdata" >

    <TextView
        android:id="@+id/viewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/viewSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/smoothenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smoothen"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/smoothenSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/legendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legend"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/legend40mbps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">= 40 Mbps"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/legend21mbps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">= 21 Mbps"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/legend16mbps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">= 16 Mbps"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/legend10mbps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">= 10 Mbps"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/legend6mbps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">= 6 Mbps"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/legendNoCoverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Coverage"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
