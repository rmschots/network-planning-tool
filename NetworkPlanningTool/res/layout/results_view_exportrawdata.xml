<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="export" >

    <TextView
        android:id="@+id/dataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:id="@+id/exportRawDataRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/normalizedPlanRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normalized plan" />

        <RadioButton
            android:id="@+id/optimizedPlanRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optimized plan" />

        <RadioButton
            android:id="@+id/coverageDataRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Coverage Data" />

        <RadioButton
            android:id="@+id/exposureInfoRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exposure info" />

        <RadioButton
            android:id="@+id/benchmarksRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benchmarks" />
    </RadioGroup>

    <Button
        android:id="@+id/saveRawDataButton"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="handleSaveRawData" />

</LinearLayout>
