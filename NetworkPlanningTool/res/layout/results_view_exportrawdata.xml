<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="export" >

    <TextView
        android:id="@+id/dataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:id="@+id/exportRawDataRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/wallsMaterialMetalRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normalized plan" />

        <RadioButton
            android:id="@+id/wallsMaterialZeroDBRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optimized plan" />

        <RadioButton
            android:id="@+id/wallsMaterialBrickRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Coverage Data" />

        <RadioButton
            android:id="@+id/wallsMaterialLayeredDrywallRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exposure info" />

        <RadioButton
            android:id="@+id/wallsMaterialConcreteRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benchmarks" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/saveButton"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Save" />

        <Button
            android:id="@+id/viewButton"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="View" />

    </LinearLayout>

</LinearLayout>
